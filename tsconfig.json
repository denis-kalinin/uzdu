{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "lib": ["ESNext"],
  "include": [
    "./src/**/*.ts"
  ]
}